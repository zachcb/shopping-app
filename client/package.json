{
  "name": "shopping-app",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "lodash": "^4.17.15",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-scripts": "3.3.0"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "autoprefixer": "^9.4.2",
    "eslint-config-kentcdodds": "^14.2.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.10",
    "postcss-cli": "^6.0.1",
    "postcss-nested": "^4.1.1",
    "prettier": "^1.16.4",
    "tailwindcss": "^1.0.1"
  },
  "scripts": {
    "build:css": "postcss tailwindcss/tailwind.src.css -o src/css/tailwind.css",
    "watch:css": "postcss tailwindcss/tailwind.src.css -o src/css/tailwind.css -w",
    "start": "yarn watch:css & react-scripts start",
    "build": "yarn build:css && react-scripts build",
    "test": "react-scripts test",
    "eslint": "eslint src",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
